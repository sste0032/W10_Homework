{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Conflicts Across the Globe",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
      "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "transform": [
        {
          "calculate": "'No conflicts recorded in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "white", "stroke": "darkgray"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/map_data.csv"
            },
            "key": "location",
            "fields": ["no_conflicts", "avg_intensity", "avg_duration"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "darkgrey"},
      "encoding": {
        "color": {
          "field": "no_conflicts",
          "type": "quantitative",
          "scale": {
            "type":"threshold",
            "domain": [2, 6, 12, 20, 30],
            "range": [
              "rgb(254,240,217)",
              "rgb(253,212,158)",
              "rgb(253,187,132)",
              "rgb(252,141,89)",
              "rgb(227,74,51)",
              "rgb(179,0,0)"]
            },
          "legend": {"title": "Number of Conflicts"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
          {"field": "no_conflicts", "type": "ordinal", "title": "Number of Conflicts:"},
          {"field": "avg_intensity", "type": "quantitative", "title": "Average Intensity:"},
          {"field": "avg_duration", "type": "ordinal", "title": "Average Duration (days):"}
        ]
      }
    },
    {
      "data": {
      "url": "https://raw.githubusercontent.com/sste0032/FIT3179_Homework/main/Homework%20W9/Data/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "darkgrey"}
    }
  ],
  "config": {}
}
