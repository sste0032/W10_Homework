{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Conflicts Over Time (1946-2022)",
  "width": 400,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/sste0032/W10_Homework/main/data/year_data.csv"
  },
  "params": [
    {
      "name": "region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Asia",
          "Europe",
          "Middle East"
        ],
        "labels": [
          "Show All Regions",
          "Africa",
          "Americas",
          "Asia",
          "Europe",
          "Middle East"
        ],
        "name": "Region Filter:"
      }
    }
  ],
  "transform": [
    {"filter": "region_selection == null || datum.region == region_selection"}
  ],
  "layer": [{
    "mark": "area",
    "encoding": {
      "x": {
        "timeUnit": "year", 
        "field": "year", 
        "axis": {"format": "%Y"},
        "title": "Year"},
      "y": {
        "field": "no_conflicts",
        "type": "quantitative",
        "title": "Number of Conflicts"},
      "color": {
        "field": "region",
        "type": "nominal",
        "scale": {
          "domain": [
            "Africa",
            "Americas",
            "Asia",
            "Europe",
            "Middle East",
            "Multiple"
          ],
          "range": [
            "#1f78b4",
            "#33a02c",
            "#66c2a5",
            "#b2df8a",
            "#1b9e77",
            "#80b1d3"
          ]
        },
        "legend": {"title": "Region"}
     },
      "tooltip": [
        {"field": "year", "type": "temporal", 
          "format": "%Y", "title": "Year"},
        {"field": "region", "type": "nominal", 
          "title": "Region"},
        {"field": "no_conflicts", "type": "quantitative", "title": "Number of Conflicts"}
      ]
    }
  },{
    "transform": [
      {
        "joinaggregate": [
          {
            "op": "sum",
            "field": "no_conflicts",
            "as": "total_conflicts"
          }
        ],
        "groupby": [
          "year"
        ]
      },
      {
        "joinaggregate": [
          {
            "op": "max",
            "field": "total_conflicts",
            "as": "max_conflicts"
          }
        ]
      }
    ],
    "mark": {
      "type": "circle"
    },
    "encoding": {
      "y": {
        "field": "max_conflicts", 
        "type": "quantitative"
      },
      "x": {
        "field": "year",
        "type": "temporal",
        "aggregate": {"argmax": "total_conflicts"}
      },
      "color": {
        "value": "darkorange"
      },
      "tooltip": [
        {"field": "max_conflicts", "type": "quantitative", "title": "Maximum Total Conflicts"},
        {"field": "year", 
        "type": "temporal",
        "format": "%Y", 
        "title": "Year",
        "aggregate": {"argmax": "total_conflicts"}}
      ]
    }   
  }],
  "config": {
  }
}
